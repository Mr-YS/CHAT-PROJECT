<% include ../partials/header %>
	<form class="col s12" action="/hub" method="post">
<!--		<ul class="collapsible popout" data-collapsible="accordion"> -->
		</ul>
		<div class="input-field col s12">
			<select name="groupname">
		<% for(var i = 0; i < groups.length; ++i) { %>
			<option value="<%=groups[i].groupname %>"><%=groups[i].groupname %></option>
		<% } %>
			</select>
			<label for="groupname">Group Name</label>
		</div>
		<div class="input-field col s12">
			<label for="password">Password</label>
			<input type="password" name="password" class="form-control" />
		</div>
		<button type="submit" class="btn input-field orange lighten-3 col s6 offset-s3 waves-effect waves-light">Join
		</button>
	</form>
	<script>
		$(document).ready(function() {
			$('select').material_select();
		});
	</script>
