<% include ../partials/header %>
  <div class="row">
    <form class="col s12" action="/login" method="post">
      <div class="row">
        <div class="input-field col s12">
	  <input name="username" id="username" type="text" class="validate">
          <label style="color:#ffc107" for="username">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input name="password" id="password" type="password" class="validate">
          <label style="color:#ffc107" for="password">Password</label>
        </div>
      </div>
      <button class="orange lighten-2 input-field col s5 btn waves-effect waves-light" type="submit" name="action"> Sign in
	<i class="material-icons right">send</i>
      </button>
      <a class="btn light-blue lighten-4 input-field col s5 offset-s2 waves-effect waves-dark" href="/signup">SIGN UP
      	<i class="material-icons right">create</i>
      </a>
    </form>
  </div>
<% include ../partials/footer %>
